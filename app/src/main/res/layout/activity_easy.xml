<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jeremylim.mathgame.MainActivity"
    android:background="@drawable/bg">

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="129dp"
        android:layout_marginTop="155dp"
        android:id="@+id/textViewNum1"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="46sp"
        android:textStyle="normal|bold"
        android:textColor="#1565C0" />

    <TextView
        android:text="2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="65dp"
        android:id="@+id/textViewNum2"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="46sp"
        android:textStyle="normal|bold"
        android:textColor="#1565C0"
        android:layout_alignBaseline="@+id/textViewNum1"
        android:layout_alignBottom="@+id/textViewNum1"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_marginTop="46dp"
        android:id="@+id/editTextAnswer"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="40sp"
        android:textColor="#1565C0"
        android:hint="Answer"
        android:layout_below="@+id/textViewNum2"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/imageViewOperation" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/plus"
        android:id="@+id/imageViewOperation"
        android:layout_marginEnd="34dp"
        android:layout_above="@+id/editTextAnswer"
        android:layout_toStartOf="@+id/imageViewNext"
        android:layout_marginBottom="13dp" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonHome"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:background="#1565C0"
        android:textColor="#E3F2FD"
        android:textStyle="normal|bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/next"
        android:id="@+id/imageViewNext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="34dp" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/buttonSubmit"
        android:background="#1565C0"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#E3F2FD"
        android:textStyle="normal|bold"
        android:layout_below="@+id/editTextAnswer"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="33dp" />
</RelativeLayout>
